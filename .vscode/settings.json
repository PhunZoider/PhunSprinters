            },
            // copy src/icon to dest/42.0.0/icon
            {
                "match": ".*",
                "cmd": "copy ${workspaceFolder}\\Contents\\mods\\PhunSprintersUI\\icon.png ${env.USERPROFILE}\\Zomboid\\mods\\PhunSprintersUI\\42.0.0\\icon.png /Y"
            },            
            // remove workshop/*
            {
                "match": ".*",
                "cmd": "rmdir /S /Q ${env.USERPROFILE}\\Zomboid\\Workshop\\PhunSprinters 2>nul"
            },
            // copy src to workshop
            {
                "match": ".*",
                "cmd": "xcopy ${workspaceFolder} ${env.USERPROFILE}\\Zomboid\\Workshop\\PhunSprinters /Y /I /E /F /EXCLUDE:xclude"
            },

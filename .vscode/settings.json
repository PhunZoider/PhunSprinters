            {
                "match": ".*",
                "cmd": "rmdir /S /Q ${env.USERPROFILE}\\Zomboid\\Workshop\\PhunSprinters\\Tests 2>nul"
            },              
            // copy dest to workshop
            {
                "match": ".*",
                "cmd": "xcopy ${env.USERPROFILE}\\Zomboid\\mods\\PhunSprinters ${env.USERPROFILE}\\Zomboid\\Workshop\\PhunSprinters\\Contents\\mods\\PhunSprinters /Y /I /E /F"
            },
            // copy dest to workshop
            {
                "match": ".*",
                "cmd": "xcopy ${env.USERPROFILE}\\Zomboid\\mods\\PhunSprintersUI ${env.USERPROFILE}\\Zomboid\\Workshop\\PhunSprinters\\Contents\\mods\\PhunSprintersUI /Y /I /E /F"
